{#
/**
 * @file
 * Display Suite 1 column template.
 *
 * Available variables:
 * - ds_content_wrapper: wrapper around content
 * - attributes: content region attributes
 * - ds_content: content region
 */
#}
<{{ ds_content_wrapper }}{{ attributes.addClass('ds-1col', 'clearfix') }}>

{{ title_suffix.contextual_links }}

<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
  <li role="presentation" class="active"><a id="dashboard-tab" href="#dashboard-content" aria-controls="dashboard" role="tab" data-toggle="tab">Tableau de bord</a></li>
  <li role="presentation"><a id="news-tab" href="#news-content" aria-controls="news" role="tab" data-toggle="tab">Actualités</a></li>
  <li role="presentation"><a id="resources-tab" href="#resources-content" aria-controls="resources" role="tab" data-toggle="tab">Ressources</a></li>
</ul>


<!-- Tab panes -->
<div class="tab-content" id="arb-dashboard">

  <!-- Tableau de bord -->
  <div role="tabpanel" class="tab-pane active" id="dashboard-content">
    <div class="region-infos col-md-8">
      <h2>{{ ds_content.label }}</h2>
      {{ ds_content.field_internet_site }}
    </div>
    <div class="regions-backlink col-md-4">
      <a href="/regions">Retour à la carte</a>
    </div>
    <div class="region-presentation col-md-12">
      {{ ds_content.field_presentation }}
    </div>
    <div class="region-members col-md-12">
      <h3>Membres</h3>
      {{ region_members_eva_dashboard_tab }}
    </div>
    <div class="region-latest-news col-md-6">
      <h3>Dernières actualités</h3>
      {{ national_news_eva_dashboard_tab }}
    </div>
    <div class="region-latest-resources col-md-6">
      <h3>Dernières ressources</h3>
      {{ national_resources_eva_dashboard_tab }}
    </div>
  </div>

  <!-- Actualités -->
  <div role="tabpanel" class="tab-pane" id="news-content">
    <h2>{{ ds_content.label }}</h2>
    {{ national_news_eva_news_tab }}
  </div>

  <!-- Ressources -->
  <div role="tabpanel" class="tab-pane" id="resources-content">
    <h2>{{ ds_content.label }}</h2>
    {{ national_resources_eva_resources_tab }}
  </div>
</div>


<!-- A conserver pour le debuggage -->
{#<ol>#}
  {#{% for key, value in _context  %}#}
    {#<li>{{ key }}</li>#}
  {#{% endfor %}#}
{#</ol>#}



</{{ ds_content_wrapper }}>
